# Copy this file to .env and fill in your values

# MongoDB Connection String (REQUIRED)
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority

# JWT Secret Key (REQUIRED for production)
# Generate a strong secret key (at least 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Environment
NODE_ENV=production

# Frontend URLs for CORS (Optional)
FRONTEND_URL_PROD=https://your-frontend-app.vercel.app
FRONTEND_URL_1=https://your-frontend-app-1.vercel.app
FRONTEND_URL_2=https://your-frontend-app-2.vercel.app

# Note: PORT is automatically set by Railway, don't set it manually
